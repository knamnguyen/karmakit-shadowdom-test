{
  "manifest_version": 3,
  "name": "Reddit Comment Helper",
  "version": "1.0.0",
  "description": "Chrome extension to automatically interact with Reddit comment boxes in shadow DOM",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://*.reddit.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.reddit.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "",
    "default_title": "Add sample comment to Reddit"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
